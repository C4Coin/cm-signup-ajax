{
  "name": "@c4coin/website-public",
  "version": "1.0.0",
  "description": "The forward-facing website for C4 & EXO coin",
  "main": "index.js",
  "scripts": {
    "precommit": "lint-staged",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check",
    "build": "webpack --mode production",
    "build:dev": "webpack --config webpack.dev.config.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf dist",
    "test": "npm run test:unit",
    "test:unit": "mocha-webpack --mode development 'test/**/*.spec.js' --webpack-config webpack.config.test.js",
    "test:unit:cov": "cross-env NODE_ENV=coverage nyc --reporter=lcov --reporter=text npm run test:unit"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 0,
    "statements": 0,
    "functions": 0,
    "branches": 0,
    "include": [
      "web-app/**/*.js"
    ],
    "exclude": [],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true,
    "cache": true
  },
  "babel": {
    "presets": [
      "stage-0",
      "env"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/C4Coin/cm-signup-ajax"
  },
  "keywords": [
    "C4Coin",
    "C4",
    "EXOCoin",
    "EXO",
    "blockchain",
    "crowdsale"
  ],
  "author": "Sam Grad Oliver <sam.grad.oliver@gmail.com>",
  "contributors": [
    "Dave Sag <davesag@gmail.com>"
  ],
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/C4Coin/cm-signup-ajax/issues"
  },
  "homepage": "https://github.com/C4Coin/cm-signup-ajax#readme",
  "lint-staged": {
    "*.{js}": [
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "devDependencies": {
    "ajv": "^6.4.0",
    "ajv-keywords": "^3.1.0",
    "autoprefixer": "^8.3.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-rewire": "^1.1.0",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^5.1.4",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-mocha": "^4.12.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "istanbul-instrumenter-loader": "^3.0.1",
    "lint-staged": "^7.0.4",
    "mocha": "^5.1.0",
    "mocha-webpack": "^2.0.0-beta.0",
    "nyc": "^11.7.0",
    "prettier": "^1.12.0",
    "sinon": "^4.5.0",
    "sinon-chai": "^3.0.0",
    "sinon-stub-promise": "^4.0.0",
    "webpack": "^4.5.0",
    "webpack-bundle-tracker": "^0.3.0",
    "webpack-cli": "^2.0.14",
    "webpack-node-externals": "^1.7.2"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "qs": "^6.5.1"
  }
}
